#!/bin/bash
# 11/06/2019
# Made by L-F-S
# At the University Of Trento, Italy

# run pilercr the samplesample bins
# with default parameters.
DATADIR=/scratchCM/tmp_projects/epasolli_darkmatter/allcontigs/ALLreconstructedgenomes
WDIR=/shares/CIBIO-Storage/CM/scratch/tmp_projects/signorini_cas/1crisprsearch
cd $DATADIR

for sgb in $(ls); do
    echo entro dentro +++++ $sgb
    cd $sgb
    
     # cicla tra tutti i file, e salva in tmp_Zeevid quelli che iniziano con ZeeviD (nel nome)
    for i  in *; do if [[ $i == ZeeviD* ]]; then echo $i>>tmp_ZeeviD; fi; done
    # metti tutti i file che sono in colonna , in riga
    Vim tmp_ZeeviD -c %j -c wq
    # apri il file, che Ã¨ una riga di nomi space separated, e feedali a parallel
    while read p; do
           echo "$p"
           echo "$p" |  parallel --no-notice '/home/lorenzo.signorini/cas_mining/utils/jdk-12.0.1/bin/java -jar /home/lorenzo.signorini/cas_mining/1crisprsearch/minced/minced.jar {} /shares/CIBIO-Storage/CM/scratch/tmp_projects/signorini_cas/1crisprsearch/out/ZeeviD_2015/{}.minced.out.txt /shares/CIBIO-Storage/CM/scratch/tmp_projects/signorini_cas/1crisprsearch/out/ZeeviD_2015/{}.minced.out.gff'  # TODO occhio ai 2  folder ZeeviD hardcoded
    done <tmp_ZeeviD
    rm tmp_ZeeviD
    cd ../
done
