if [ $# -lt 1 ]; then
    echo "cd to /shares/CIBIO-Storage/CM/scratch/scratchCM/users/e.pasolli/projects/epasolli_darkmatter/allcontigs\<dataset\>/metabat/genomes_comp50_cont05/prokka/\<sample_ID\>/"
