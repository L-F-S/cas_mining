    echo gotobin  \<dataset\>__\<sample\>__bin
    exit 1
fi

#split string in bash:  nn so co sa fa ma funge
BINNAME=$1 #str

delimiter="__"
s=$BINNAME$delimiter
array=();
while [[ $s ]]; do
	    array+=( "${s%%"$delimiter"*}" );
	        s=${s#*"$delimiter"};
	done;
#	declare -p array  # se fai questo ti printa l array diviso int re, ma se chiami $array for some reason ti printa solo il primo membro,che casualmente Ã¨ quello che voglio quindi bella

cd /shares/CIBIO-Storage/CM/scratch/scratchCM/users/e.pasolli/projects/epasolli_darkmatter/allcontigs/$array/metabat/genomes_comp50_cont05/prokka/$1

